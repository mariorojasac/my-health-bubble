      <style>
      body {
           background-image: linear-gradient(to right, #5637dd, blue);
      }
    .img-fluid {
      max-width: 100%;
      height: auto;
    }
    h1 {
        text-transform: uppercase;
    }

     img {
      display: inline-block;
      position: relative;
      width: 8vw;
      height: 10.5vh;
      overflow: hidden;
      border-radius: 50%;
      border: 5px solid gold;
    }

    .jumbotron {

      margin: 0;
      padding: 30px;
      background-image: linear-gradient(to right, #5637dd, blue);
      color: gold;
    }


    button {
