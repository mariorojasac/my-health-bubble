<body>


    <header class="jumbotron jumbotron-fluid">
        <div class="container">
            <div class="row row-content">
                <div class="col">

                </div>
                <div class="col col-8 col-sm-6">
                    <h1>HEALTH TRACKER</h1>
                </div>
                <div class="col">

                </div>
            </div>
        </div>
        </div>

        <div>
            <nav>
                <ul>
                    <li><button><a href="/trackedlogs/new">Add Log</a></button></li>
                    <li><button><a href="/dashboard">Back to dashboard</a></button></li>
                </ul>
            </nav>
        </div>
    </header>


    <main>
        <div class="container">
        <% logs.forEach(log => { %>
        <div>
            <div>
                <h2><a href="/trackedlogs/<%= log._id %>"><%= log.activity %></a></h2>
            </div>
            <div>
                <p><%= log.createdAt %></p>
                <p>Meals: <%= log.meals %></p>
                <p>Weight: <%= log.weight %></p>
                <p>symptoms: <%= log.symptoms %></p>
            </div>
        </div>
        <div>
            <div>
                <button><a href="/trackedlogs/<%= log._id%>/edit">Edit</a></button>
            </div>
            <div>
                <form method="POST" action="/trackedlogs/<%= log._id %>?_method=DELETE">
                    <button type="submit" value="DELETE">Delete</button>
                </form>
            </div>
        </div><hr>
        <% }); %> </div>
       
    </main>

</body>

</html>